<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th width='10%' height='50px'>Name</th>
      <th width='20%'>Description</th>
      <th width='10%'>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td height='30px'><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.image_url %></td>
        <td width='3%'><%= link_to 'Show', product %></td>
        <td width='3%'><%= link_to 'Edit', edit_product_path(product) %></td>
        <td width='5%'><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

